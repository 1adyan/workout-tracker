<%- include('partials/header') %>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <!-- Page Header -->
            <div class="text-center mb-4">
                <h1 class="display-5">
                    <i class="bi bi-plus-circle text-primary"></i> Add New Workout
                </h1>
                <p class="text-muted">Log your latest training session</p>
            </div>
            
            <!-- Add Workout Form -->
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <form method="POST" action="/workouts/add">
                        
                        <!-- Workout Type -->
                        <div class="mb-3">
                            <label for="workoutType" class="form-label">
                                <i class="bi bi-tag"></i> Workout Type *
                            </label>
                            <select class="form-select" id="workoutType" name="workoutType" required>
                                <option value="">Select workout type...</option>
                                <option value="Push">Push Day</option>
                                <option value="Pull">Pull Day</option>
                                <option value="Legs">Legs Day</option>
                                <option value="Full Body">Full Body</option>
                                <option value="Cardio">Cardio</option>
                                <option value="Other">Other</option>
                            </select>
                        </div>
                        
                        <!-- Exercise Name -->
                        <div class="mb-3">
                            <label for="exercise" class="form-label">
                                <i class="bi bi-trophy"></i> Exercise Name *
                            </label>
                            <input type="text" 
                                   class="form-control" 
                                   id="exercise" 
                                   name="exercise" 
                                   placeholder="e.g., Bench Press, Squats, Deadlifts"
                                   required>
                            <div class="form-text">Enter the specific exercise you performed</div>
                        </div>
                        
                        <!-- Weight -->
                        <div class="mb-3">
                            <label for="weight" class="form-label">
                                <i class="bi bi-speedometer2"></i> Weight (lbs) *
                            </label>
                            <input type="number" 
                                   class="form-control" 
                                   id="weight" 
                                   name="weight" 
                                   min="0"
                                   step="0.5"
                                   placeholder="e.g., 185"
                                   required>
                        </div>
                        
                        <!-- Sets and Reps Row -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="sets" class="form-label">
                                    <i class="bi bi-collection"></i> Sets *
                                </label>
                                <input type="number" 
                                       class="form-control" 
                                       id="sets" 
                                       name="sets" 
                                       min="1"
                                       placeholder="e.g., 3"
                                       required>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label for="reps" class="form-label">
                                    <i class="bi bi-repeat"></i> Reps *
                                </label>
                                <input type="number" 
                                       class="form-control" 
                                       id="reps" 
                                       name="reps" 
                                       min="1"
                                       placeholder="e.g., 10"
                                       required>
                            </div>
                        </div>
                        
                        <!-- Time of Day -->
                        <div class="mb-3">
                            <label for="timeOfDay" class="form-label">
                                <i class="bi bi-clock"></i> Time of Day *
                            </label>
                            <select class="form-select" id="timeOfDay" name="timeOfDay" required>
                                <option value="">Select time...</option>
                                <option value="Morning">Morning</option>
                                <option value="Afternoon">Afternoon</option>
                                <option value="Evening">Evening</option>
                            </select>
                        </div>
                        
                        <!-- Date -->
                        <div class="mb-3">
                            <label for="date" class="form-label">
                                <i class="bi bi-calendar-date"></i> Workout Date *
                            </label>
                            <input type="date" 
                                   class="form-control" 
                                   id="date" 
                                   name="date" 
                                   required>
                        </div>
                        
                        <!-- Notes optional -->
                        <div class="mb-4">
                            <label for="notes" class="form-label">
                                <i class="bi bi-chat-left-text"></i> Notes (Optional)
                            </label>
                            <textarea class="form-control" 
                                      id="notes" 
                                      name="notes" 
                                      rows="3"
                                      maxlength="500"
                                      placeholder="Add any additional notes about your workout..."></textarea>
                            <div class="form-text">Max 500 characters</div>
                        </div>
                        
                        <!-- Form Buttons -->
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary flex-fill">
                                <i class="bi bi-check-circle"></i> Save Workout
                            </button>
                            <a href="/workouts" class="btn btn-outline-secondary flex-fill">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
            
            <!-- Help Text -->
            <div class="alert alert-info mt-4" role="alert">
                <i class="bi bi-info-circle"></i>
                <strong>Tip:</strong> Fill in all required fields (*) to successfully log your workout.
            </div>
        </div>
    </div>
</div>

<!-- Auto-set today's date -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Set default date to today
        const dateInput = document.getElementById('date');
        const today = new Date().toISOString().split('T')[0];
        dateInput.value = today;
    });
</script>

<%- include('partials/footer') %>