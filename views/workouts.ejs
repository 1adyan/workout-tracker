<%- include('partials/header') %>

<div class="container">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5">
            <i class="bi bi-list-ul text-primary"></i> My Workouts
        </h1>
        <a href="/workouts/add" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Workout
        </a>
    </div>
    
    <% if (workouts.length === 0) { %>
        <!-- Empty State -->
        <div class="text-center py-5">
            <i class="bi bi-inbox text-muted" style="font-size: 5rem;"></i>
            <h3 class="mt-3 text-muted">No Workouts Yet</h3>
            <p class="text-muted">Start tracking your fitness journey by adding your first workout!</p>
            <a href="/workouts/add" class="btn btn-primary mt-3">
                <i class="bi bi-plus-circle"></i> Add Your First Workout
            </a>
        </div>
    <% } else { %>
        <!-- Workouts Grid -->
        <div class="row g-4">
            <% workouts.forEach(workout => { %>
                <div class="col-md-6 col-lg-4">
                    <div class="card workout-card h-100 shadow-sm">
                        <!-- Card Header with Workout Type Badge -->
                        <div class="card-header bg-white border-bottom">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="badge 
                                    <% if (workout.workoutType === 'Push') { %>bg-danger
                                    <% } else if (workout.workoutType === 'Pull') { %>bg-primary
                                    <% } else if (workout.workoutType === 'Legs') { %>bg-warning
                                    <% } else if (workout.workoutType === 'Full Body') { %>bg-success
                                    <% } else if (workout.workoutType === 'Cardio') { %>bg-info
                                    <% } else { %>bg-secondary
                                    <% } %>">
                                    <%= workout.workoutType %>
                                </span>
                                <small class="text-muted">
                                    <i class="bi bi-clock"></i> <%= workout.timeOfDay %>
                                </small>
                            </div>
                        </div>
                        
                        <!-- Card Body with Workout Details -->
                        <div class="card-body">
                            <h5 class="card-title text-primary">
                                <i class="bi bi-trophy"></i> <%= workout.exercise %>
                            </h5>
                            
                            <div class="workout-details">
                                <p class="mb-2">
                                    <i class="bi bi-calendar-date text-muted"></i>
                                    <strong>Date:</strong> 
                                    <%= new Date(workout.date).toLocaleDateString('en-US', { 
                                        year: 'numeric', 
                                        month: 'long', 
                                        day: 'numeric' 
                                    }) %>
                                </p>
                                
                                <p class="mb-2">
                                    <i class="bi bi-speedometer2 text-muted"></i>
                                    <strong>Weight:</strong> <%= workout.weight %> lbs
                                </p>
                                
                                <p class="mb-2">
                                    <i class="bi bi-repeat text-muted"></i>
                                    <strong>Sets × Reps:</strong> <%= workout.sets %> × <%= workout.reps %>
                                </p>
                                
                                <% if (workout.notes) { %>
                                    <p class="mb-2 text-muted">
                                        <i class="bi bi-chat-left-text"></i>
                                        <em><%= workout.notes %></em>
                                    </p>
                                <% } %>
                            </div>
                        </div>
                        
                        <!-- Card Footer with Action Buttons -->
                        <div class="card-footer bg-white border-top">
                            <div class="d-flex gap-2">
                                <a href="/workouts/edit/<%= workout._id %>" 
                                   class="btn btn-sm btn-outline-primary flex-fill">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                
                                <form method="POST" 
                                      action="/workouts/delete/<%= workout._id %>" 
                                      class="delete-form flex-fill">
                                    <button type="submit" 
                                            class="btn btn-sm btn-outline-danger w-100">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } %>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="bi bi-exclamation-triangle"></i> Confirm Delete
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p class="mb-0">Are you sure you want to delete this workout?</p>
                <p class="text-muted mb-0"><small>This action cannot be undone.</small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    Cancel
                </button>
                <button type="button" class="btn btn-danger" id="confirmDelete">
                    <i class="bi bi-trash"></i> Delete
                </button>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>